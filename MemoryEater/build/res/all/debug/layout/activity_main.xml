<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppBaseTheme">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="gravity"
            android:orientation="horizontal"
            android:stretchColumns="1">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow2">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:text="@string/java_heap"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:layout_gravity="left"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/javaHeap"
                    android:layout_gravity="center|right"
                    android:layout_column="7"
                    android:textStyle="normal"
                    android:textColor="#0c73ff"
                    android:textAlignment="gravity"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:text="@string/native_heap"
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:layout_gravity="left"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/nativeHeap"
                    android:layout_gravity="center|right"
                    android:layout_column="7"
                    android:textStyle="normal"
                    android:textColor="#0c73ff"
                    android:textAlignment="gravity"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:text="@string/total_heap"
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:layout_gravity="left"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/totalHeap"
                    android:layout_gravity="center|right"
                    android:layout_column="7"
                    android:textStyle="normal"
                    android:textColor="#0c73ff"
                    android:textAlignment="gravity"/>

        </TableRow>

    </TableLayout>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/eat_java_memory"
            android:id="@+id/eat_java_memory_button"
            android:onClick="onClick"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/eat_native_memory"
            android:id="@+id/eat_native_memory_button"
            android:onClick="onClick"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/eat_bitmap_memory"
            android:id="@+id/eat_bitmap_memory_button"
            android:onClick="onClick"
            android:visibility="gone"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/error_none"
            android:id="@+id/errorDescription"
            android:layout_gravity="center"
            android:textColor="#ff0800"
            android:visibility="gone"/>

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:measureWithLargestChild="false"
            android:showDividers="beginning|middle|end"
            android:textAlignment="gravity"
            android:stretchColumns="1">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/memory_class"
                    android:id="@+id/textView"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:gravity="right"
                    android:layout_gravity="left"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/memoryClass"
                    android:layout_column="1"
                    android:textStyle="normal"
                    android:textColor="#0c73ff"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:layout_gravity="right"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/large_memory_class"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:gravity="right"
                    android:layout_gravity="left"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/largeMemoryClass"
                    android:layout_column="1"
                    android:textStyle="normal"
                    android:textColor="#0c73ff"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:layout_gravity="right"/>
        </TableRow>

    </TableLayout>

</LinearLayout>